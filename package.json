{
  "name": "toombs",
  "version": "1.0.0",
  "main": "frontend/static/index.js",
  "scripts": {
    "start-m": "run-p start:backend-m start:frontend",
    "start-w": "run-p start:backend-w start:frontend",
    "start:frontend": "cd frontend && npm start",
    "start:backend-m": "cd backend && ./gradlew clean bootrun",
    "start:backend-w": "cd backend && gradlew clean bootrun",
    "build": "run-s build:frontend copyFrontend build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && gradlew assemble",
    "copyFrontend": "cp -R frontend/dist/ backend/src/main/resources/static"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
